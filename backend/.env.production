# Production Environment Variables for Fly.io
# These will be set as Fly secrets, this file is for reference

# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# Server Configuration  
NODE_ENV=production
PORT=3000

# CORS Configuration
CORS_ORIGIN="https://wtf-whatsapp-dashboard.fly.dev"

# AI Analysis
TOGETHER_API_KEY="your_together_ai_api_key"

# WhatsApp Session Storage
SESSION_PATH="/app/backend/storage"

# Media Storage
MEDIA_PATH="/app/backend/public/media"

# Logging
LOG_LEVEL=info